// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  admin
  store
  viewer
}

enum MaterialType {
  EMT
  IMC
  HDPE
  CABLE
}

enum TransactionStatus {
  PENDING
  COMPLETED
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  sentTransactions     Transaction[] @relation("SenderTransactions")
  receivedTransactions Transaction[] @relation("ReceiverTransactions")
}

model Material {
  id   Int          @id @default(autoincrement())
  name String       @unique
  type MaterialType
  unit String

  transactions Transaction[]

  @@index([type])
}

model Transaction {
  id        Int               @id @default(autoincrement())
  quantity  Int
  site      String
  building  String
  status    TransactionStatus @default(PENDING)

  senderId   Int
  sender     User  @relation("SenderTransactions", fields: [senderId], references: [id], onDelete: Restrict)
  receiverId Int?
  receiver   User? @relation("ReceiverTransactions", fields: [receiverId], references: [id], onDelete: SetNull)

  materialId Int
  material   Material @relation(fields: [materialId], references: [id], onDelete: Restrict)

  createdAt   DateTime @default(now())
  completedAt DateTime?

  @@index([site, building])
  @@index([status, createdAt])
  @@index([materialId])
}