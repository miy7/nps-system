// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// เพิ่มต่อท้ายไฟล์เดิม
model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String // เช่น "ADMIN", "SENDER" (นาย A), "APPROVER" (นาย B)
  name     String
}

enum Role {
  admin
  store
  viewer
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String   // ชื่อสินค้า เช่น "ท่อ EMT 1/2"
  code      String   @unique // รหัสสินค้า
  unit      String   // หน่วย
  transactions Transaction[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  quantity    Int      // จำนวนที่ส่ง
  site        String   // เช่น "CM"
  building    String   // เช่น "F"
  
  sender      String   // ชื่อคนส่ง (นาย A)
  receiver    String?  // ชื่อคนรับ (นาย B - จะมีค่าเมื่อกดรับแล้ว)
  
  status      String   @default("PENDING") // PENDING=รอรับ, COMPLETED=รับแล้ว
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  productId   Int
  product     Product  @relation(fields: [productId], references: [id])
}